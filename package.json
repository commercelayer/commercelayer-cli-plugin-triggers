{
  "name": "@commercelayer/cli-plugin-triggers",
  "description": "Commerce Layer CLI Triggers plugin",
  "version": "3.13.0",
  "author": "Pierluigi Viti <pierluigi@commercelayer.io>",
  "bugs": "https://github.com/commercelayer/commercelayer-cli-plugin-triggers/issues",
  "engines": {
    "node": "^16.13.0 || >=18.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/commercelayer/commercelayer-cli-plugin-triggers",
  "keywords": [
    "ecommerce",
    "cli",
    "commercelayer"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "cl-triggers",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "plugins": [],
    "topics": {
      "triggers": {
        "description": "Execute resource triggers",
        "hidden": true
      }
    },
    "repositoryPrefix": "<%- repo %>/blob/main/<%- commandPath %>",
    "additionalHelpFlags": [
      "-h"
    ],
    "topicSeparator": ":"
  },
  "repository": "commercelayer/commercelayer-cli-plugin-triggers",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "build": "rm -rf lib && tsc -b",
    "prepack": "pnpm generate && pnpm build && oclif manifest && pnpm readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "readme": "cl-cli-dev readme --plugin --bin=commercelayer && git add README.md",
    "generate": "ts-node gen/generator.ts",
    "lint": "eslint src --ext .ts --config .eslintrc",
    "lint:fix": "eslint src --fix"
  },
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@commercelayer/cli-dev": "^2.0.5",
    "@commercelayer/eslint-config-ts": "^1.0.1",
    "@oclif/plugin-help": "^5.2.11",
    "@oclif/test": "^2.3.26",
    "@types/chai": "^4.3.5",
    "@types/inquirer": "^8.2.6",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.0",
    "chai": "^4.3.7",
    "eslint": "^8.44.0",
    "inflector-js": "^1.0.1",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@commercelayer/cli-core": "^3.10.0",
    "@commercelayer/js-auth": "^2.3.0",
    "@commercelayer/sdk": "^5.7.0",
    "@oclif/core": "^2.8.11",
    "inquirer": "^8.2.5",
    "tslib": "^2.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
