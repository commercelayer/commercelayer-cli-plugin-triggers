{
  "name": "@commercelayer/cli-plugin-triggers",
  "description": "Commerce Layer CLI Triggers plugin",
  "version": "4.2.0",
  "author": "Pierluigi Viti <pierluigi@commercelayer.io>",
  "homepage": "https://github.com/commercelayer/commercelayer-cli-plugin-triggers",
  "repository": "commercelayer/commercelayer-cli-plugin-triggers",
  "bugs": "https://github.com/commercelayer/commercelayer-cli-plugin-triggers/issues",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "/bin/run.*",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "ecommerce",
    "cli",
    "commercelayer"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "cl-triggers",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "plugins": [],
    "topics": {
      "triggers": {
        "description": "Execute resource triggers",
        "hidden": true
      }
    },
    "repositoryPrefix": "<%- repo %>/blob/main/<%- commandPath %>",
    "additionalHelpFlags": [
      "-h"
    ],
    "topicSeparator": ":"
  },
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "build": "rm -rf lib && tsc -b",
    "prepack": "pnpm generate && pnpm build && oclif manifest && pnpm readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "readme": "cl-cli-dev readme --plugin --bin=commercelayer && git add README.md",
    "generate": "tsx gen/generator.ts",
    "lint": "eslint src --ext .ts --config .eslintrc",
    "lint:fix": "eslint src --fix"
  },
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@commercelayer/cli-dev": "^3.0.5",
    "@commercelayer/eslint-config-ts": "^1.4.5",
    "@oclif/plugin-help": "^6.0.22",
    "@oclif/test": "^3.2.15",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/chai": "^4.3.16",
    "@types/inquirer": "^8.2.10",
    "@types/lodash.snakecase": "^4.1.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.13",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "inflector-js": "^1.0.1",
    "lodash.snakecase": "^4.1.1",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "oclif": "^4.11.3",
    "semantic-release": "^22.0.12",
    "tsx": "^4.11.0",
    "typescript": "5.3.2"
  },
  "dependencies": {
    "@commercelayer/cli-core": "^5.0.4",
    "@commercelayer/sdk": "^6.4.0",
    "@oclif/core": "^3.26.6",
    "inquirer": "^8.2.6",
    "tslib": "^2.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
